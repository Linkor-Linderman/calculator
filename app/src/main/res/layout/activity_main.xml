<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rectangle_textview"
        android:gravity="left|center_vertical"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textSize="64sp"
        android:fontFamily="@font/digital"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@id/text"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="63dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AC"
                style="@style/NumberButton"
                android:text="AC" />

            <Button
                android:id="@+id/plusMinus"
                style="@style/NumberButton"
                android:text="+/-" />

            <Button
                android:id="@+id/divisionWithRemainder"
                style="@style/NumberButton"
                android:text="%" />

            <Button
                android:id="@+id/division"
                style="@style/ActionButton"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven"
                style="@style/NumberButton"
                android:text="7" />

            <Button
                android:id="@+id/eight"
                style="@style/NumberButton"
                android:text="8" />

            <Button
                android:id="@+id/nine"
                style="@style/NumberButton"
                android:text="9" />

            <Button
                android:id="@+id/multiplication"
                style="@style/ActionButton"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                style="@style/NumberButton"
                android:text="4" />

            <Button
                android:id="@+id/five"
                style="@style/NumberButton"
                android:text="5" />

            <Button
                android:id="@+id/six"
                style="@style/NumberButton"
                android:text="6" />

            <Button
                android:id="@+id/minus"
                style="@style/ActionButton"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                style="@style/NumberButton"
                android:text="1" />

            <Button
                android:id="@+id/two"
                style="@style/NumberButton"
                android:text="2" />

            <Button
                android:id="@+id/three"
                style="@style/NumberButton"
                android:text="3" />

            <Button
                android:id="@+id/plus"
                style="@style/ActionButton"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/zero"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/big_white_button"
                android:text="0"
                android:textColor="#3A4E89" />

            <Button
                android:id="@+id/comma"
                style="@style/NumberButton"
                android:layout_width="5dp"
                android:text="." />

            <Button
                android:id="@+id/equals"
                style="@style/ActionButton"
                android:layout_width="5dp"
                android:text="=" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="271dp"
        android:layout_marginRight="271dp"
        android:layout_marginBottom="24dp"
        android:text="Calculator"
        android:fontFamily="@font/museo"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.451" />


</androidx.constraintlayout.widget.ConstraintLayout>